{
    "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
        "*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    },
    "ts-node": {
        "compilerOptions": {
        "module": "CommonJS"
        }
    },
    "include": [
        "./config/jest/setupTest.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
}